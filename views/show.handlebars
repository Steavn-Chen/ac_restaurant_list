<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <div class="d-flex flex-row-reverse bd-highlight mb-1">
        <form action="/restaurants/{{ restaurant._id }}/delete" method="POST">
          <div class="form-row align-items-center">
            <div class="col-auto">
              <button type="submit" id="trach-button"><i class=" fas fa-trash fa-2x p-2 bd-highlight"></i></button>
            </div>
          </div>
        </form>
        <a href="/restaurants/{{ restaurant._id }}/edit" class="text-secondary"><i
            class="far fa-edit fa-2x p-2 bd-highlight"></i></a>
        <a href="/" class="text-secondary"><i class="fas fa-home fa-2x p-2 bd-highlight"></i></a>
      </div>
      <p class="mb-1 ">
      <div>
        <span class="text-secondary ">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </div>
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>
      <p class="mb-5">
        {{restaurant.description}}
      </p>
      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>
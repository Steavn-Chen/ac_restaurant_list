<div class="container mt-3">
  <div class="row mt-5">
    <div class="col-md-6  mx-auto">
      <div class="card card-body " id="login-card">
        <h1 class="text-center mt-3">註冊</h1>
        {{> message }}
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">名字:</label>
            <input type="text" name="name" id="name" class="form-control" placeholder="請輸入名字" onkeyup="this.value=this.value.replace(/[^\w_]/g,'');" value="{{ name }}">
          </div>
          <div class="form-group">
            <label for="email">電子郵件地址:</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="請輸入電子郵件地址" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"/ value="{{ email }}">
          </div>
          <div class="form-group">
            <label for="password">密碼:</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="請輸入密碼" minlength="8" maxlength="16" onkeyup="this.value=this.value.replace(/[^\w_]/g,'');" value="{{ password }}">
          </div>
          <div class="form-group">
            <label for="confirmPassword">確認密碼</label>
            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="confirmPassword" minlength="8" maxlength="16" onkeyup="this.value=this.value.replace(/[^\w_]/g,'');" value="{{ confirmPassword }}">
          </div>
          <button type="submit" class="btn btn-info btn-block" id="login-page-submitBtn">註冊</button>
          <a href="/auth/facebook" class="btn btn-primary btn-block" id="login-page-registerBtn">Facebook</a>
          <p class="lead mt-3">有一個帳號 ? <a href="/users/login">登入</a></p>
        </form>
      </div>
    </div>
  </div>
</div>